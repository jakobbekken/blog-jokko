---
import BaseHead from "@components/BaseHead.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import FormattedDate from "@components/FormattedDate.astro";

const { frontmatter } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={frontmatter.title} description={frontmatter.description} />
  </head>

  <body>
    <Header />
    <main class="mx-auto my-8 max-w-4xl px-4">
      <article>
        <div class="hero-image">
          {
            frontmatter.heroImage && (
              <img class="mb-4 rounded-xl" src={frontmatter.heroImage} alt="" />
            )
          }
        </div>

        <div class="mb-8">
          <div class="title">
            {
              frontmatter.pubDate && (
                <div class="mb-1 text-rosePine-foam">
                  <FormattedDate date={new Date(frontmatter.pubDate)} />
                </div>
              )
            }
            <h1 class="mb-8 leading-none text-rosePine-rose">{frontmatter.title}</h1>
            <hr />
          </div>
          <slot />
        </div>
        <div class="mt-10">
          {
            frontmatter.updatedDate && (
              <span class="text-xs text-rosePine-pine">
                Last updated <FormattedDate date={new Date(frontmatter.updatedDate)} />
              </span>
            )
          }
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
