---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="px-4">
	<nav class="flex items-center justify-between h-36">
		<div class="text-lg"><a class="text-rosePine-text py-4 px-2" href="/">{SITE_TITLE}</a></div>
		<div class="internal-links">
			<HeaderLink href="/" class="text-rosePine-text py-4 px-2 border-b-4 border-hidden">Home</HeaderLink>
			<HeaderLink href="/blog" class="text-rosePine-text py-4 px-2 border-b-4 border-hidden">Blog</HeaderLink>
			<HeaderLink href="/about" class="text-rosePine-text py-4 px-2 border-b-4 border-hidden">About</HeaderLink>
		</div>
	</nav>
</header>
<style>
	nav a.active {
		border-bottom-style: solid;
	}
</style>
